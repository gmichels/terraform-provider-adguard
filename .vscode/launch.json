  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch a test",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}",
      "args": ["-test.v", "-test.run", "^${selectedText}$"],
      "env": {
        "TF_ACC": "1"
      },
      "showLog": true,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Attach to process",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": 65340
    }
  ]
}
